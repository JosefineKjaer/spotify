---
const { image, artist, type, square } = Astro.props;
---

<article>
  <img class={square ? "square" : ""} src={image} alt={artist} />
  <h3>{artist}</h3>
  <p>{type}</p>
</article>

<style>
  article {
    padding: 0.5rem;
  }

  img {
    width: 210px;
    border-radius: 100%;
  }

  .square {
    border-radius: 5px;
  }
</style>
